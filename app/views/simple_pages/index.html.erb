<section id="slides">
  <!--Carousel -->
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <!--carousel indcators -->
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <% n = 1 %>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
<!--carousel items -->
<div class="carousel-inner">
  <!--static items -->
  <div class="carousel-item active">
    <div class="overlay"></div>
    <img class="d-block w-100" src="<%= asset_path 'MTB.jpg' %>" alt="first-slide">
    <div class="carousel-caption d-20 d-md-40">
    <h1> Welcome to Jacques' Bikes </h1>
    <h2> Affordable bikes for all </h2>
  </div>
</div>
<!--Dynamic items -->
<div class="carousel-item">
            <div class="overlay"></div>
            <img class="d-block w-100" src="<%= asset_path 'mac-blades.jpg' %>" alt="first-slide">
            <!-- Carousel captions -->
            <div class="carousel-caption d-none d-md-block">
              <h1>Limited Edition City Bike</h1>
              <h2>£200.00</h2>
            </div>
          </div>
          <div class="carousel-item">
            <div class="overlay"></div>
            <img class="d-block w-100" src="<%= asset_path 'sunset-bike.jpg' %>" alt="first-slide">
            <!-- Carousel captions -->
            <div class="carousel-caption d-none d-md-block">
              <h1>Mountain Bike</h1>
              <p>£400.00</p>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
        <!-- end carousel-->
        </section> <!--end of slides -->

<!-- Three column grid -->
<section id="three-column-grid" class="content">
  <div class="container">
    <div class="row">
      <div class="col-md-4 text-center">
        <i class="column-icon fas fa-euro-sign"></i>
        <h3>Fantastic Value</h3>
        <p>
          Fantastic bikes at affordable prices!
        </p>
      </div>
      <div class="col-md-4 text-center">
        <i class="column-icon fas fa-bolt"></i>
        <h3>e-Bikes</h3>
        <p>
          Latest e-Bikes!
        </p>
      </div>
      <div class="col-md-4 text-center">
        <i class="column-icon fas fa-smile"></i>
        <h3>Ride Happy</h3>
        <p>
          Satisfaction!
        </p>
      </div>

    </div><!-- end three column grid -->
 </div>
</section>
