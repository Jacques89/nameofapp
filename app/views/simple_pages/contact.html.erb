<% provide(:title, "Contact") %>

<h1>Contact</h1>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <%= flash[:notice] %>

      <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
      <div class="row">
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control input-lg", placeholder: "Enter Name" %>
        </div>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: "form-control input-lg", maxlength: "50px",  placeholder: "Enter Email" %>
        </div>
        <div class="form-group">
          <%= form.label :message %>
          <%= form.text_area :message, class: "form-control input-lg",  placeholder: "Enter Message", rows: 5 %>
        </div>
      </div>
      <%= form.submit "Send", class: "form_label btn btn-default" %><br><br>
      <% end %>
    </div>

    <div class="col-md-6">
      <div class="address">
        <h2>Or you can contact me here: </h2>
        <p>xyz@gmail.com</p>
        <p>0176 7652347</p>
        <p>Schottstra√üe 4</p>
        <p>10273 Berlin</p>
      </div>
    </div>
  </div>
</div>
