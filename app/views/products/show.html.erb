<p id="notice"><%= notice %></p>

<div class="container-fluid">
 <div class="col-sm-12 col-md-6">
  <% if @product.image_url.present? %>
   <%= image_tag(@product.image_url, class: "img-responsive img-zoom", data_zoom_image: "@product.image_url") %>
    <% end %>
    </div>

      <div class="col-sm-12 col-md-6">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>


      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>

      <p>
        <strong>Colour:</strong>
        <%= @product.color %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= number_to_currency(@product.price, unit: 'â‚¬', precision: 2) %>
      </p>

      <p>
        <strong>Average Rating:</strong>
        <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div>
      </p>

      <%= form_with(url: '/payments/create') do |form| %>
        <%= render partial: "shared/stripe_checkout_button" %>
        <%= hidden_field_tag(:product_id, @product.id) %>
      <% end %>
    </div> <!-- end col -->


    <%= render 'new_comment' %>

  </div> <!-- end col -->
</div> <!-- end container -->

<div class="container-fluid">

  <div class="col-md-6 sayings">
    <div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>

    <%= render 'comments' %>

    <div class="digg_pagination">
      <%= will_paginate @comments, :container => false %>
    </div>
  </div>
</div>
</div> <!-- end container -->

<br><br>
<%= link_to 'Edit', edit_product_path(@product), class: "btn btn-default" %> |
<%= link_to 'Back', products_path, class: "btn btn-default" %>

